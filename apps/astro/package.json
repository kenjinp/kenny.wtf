{
  "name": "astro",
  "version": "3.0.0",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "postinstall": "astro sync",
    "new:post": "tsx ./scripts/new-post.tsx",
    "generate:og": "tsx ./scripts/generate-og-images.tsx",
    "build": "NODE_OPTIONS=--max-old-space-size=8192 pnpm run generate:og && NODE_OPTIONS=--max-old-space-size=8192 astro check && NODE_OPTIONS=--max-old-space-size=8192 astro build && NODE_OPTIONS=--max-old-space-size=8192 jampack ../../_dist",
    "preview": "astro preview",
    "sync": "astro sync",
    "astro": "astro",
    "format:check": "oxfmt --check src astro.config.ts tsconfig.json package.json README.md",
    "format": "oxfmt src astro.config.ts tsconfig.json package.json README.md",
    "cz": "cz",
    "lint": "oxlint --ignore-path .eslintignore src astro.config.ts",
    "lint:fix": "oxlint --ignore-path .eslintignore --fix src astro.config.ts"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/rss": "^4.0.14",
    "astro": "^5.16.6",
    "astro-embed": "^0.11.0",
    "fuse.js": "^7.1.0",
    "github-slugger": "^2.0.0",
    "plausible-tracker": "^0.3.9",
    "remark-collapse": "^0.1.2",
    "remark-toc": "^9.0.0",
    "satori": "^0.18.3",
    "satori-astro": "0.3.2",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@astrojs/react": "^4.4.2",
    "@astrojs/sitemap": "^3.6.0",
    "@astrojs/tailwind": "^6.0.2",
    "@astrojs/ts-plugin": "^1.10.6",
    "@clack/prompts": "^0.10.0",
    "@divriots/jampack": "^0.34.0",
    "@tailwindcss/typography": "^0.5.19",
    "@types/github-slugger": "^2.0.0",
    "@types/node": "^24.10.4",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "lint-staged": "^14.0.1",
    "oxfmt": "^0.23.0",
    "oxlint": "^1.38.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsx": "^4.21.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs,cts,mts,json,jsonc,json5,yaml,yml,md,mdx,css,scss,less,html,graphql,toml}": [
      "oxfmt"
    ],
    "*.{js,jsx,ts,tsx,mjs,cjs,cts,mts,astro,vue,svelte}": [
      "oxlint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
