{
  "name": "astro",
  "version": "3.0.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "postinstall": "astro sync",
    "build": "astro check && astro build && jampack ../../_dist",
    "preview": "astro preview",
    "sync": "astro sync",
    "astro": "astro",
    "format:check": "oxfmt --check src astro.config.ts tsconfig.json package.json README.md",
    "format": "oxfmt src astro.config.ts tsconfig.json package.json README.md",
    "cz": "cz",
    "lint": "oxlint --ignore-path .eslintignore src astro.config.ts",
    "lint:fix": "oxlint --ignore-path .eslintignore --fix src astro.config.ts"
  },
  "dependencies": {
    "@astrojs/check": "^0.2.0",
    "@astrojs/mdx": "^2.0.4",
    "@astrojs/rss": "^3.0.0",
    "@resvg/resvg-js": "^2.4.1",
    "astro": "^3.1.3",
    "astro-embed": "^0.6.1",
    "fuse.js": "^6.6.2",
    "github-slugger": "^2.0.0",
    "plausible-tracker": "^0.3.8",
    "remark-collapse": "^0.1.2",
    "remark-toc": "^9.0.0",
    "satori": "^0.10.8",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@astrojs/react": "^3.0.2",
    "@astrojs/sitemap": "^3.0.0",
    "@astrojs/tailwind": "^5.0.0",
    "@astrojs/ts-plugin": "^1.4.0",
    "@divriots/jampack": "^0.20.2",
    "@tailwindcss/typography": "^0.5.10",
    "@types/github-slugger": "^1.3.0",
    "@types/react": "^18.2.22",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "lint-staged": "^14.0.1",
    "oxfmt": "^0.23.0",
    "oxlint": "^1.38.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs,cts,mts,json,jsonc,json5,yaml,yml,md,mdx,css,scss,less,html,graphql,toml}": [
      "oxfmt"
    ],
    "*.{js,jsx,ts,tsx,mjs,cjs,cts,mts,astro,vue,svelte}": [
      "oxlint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
